<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.example.hokoblurdemo.activity.DynamicBlurActivity">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/image0"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/cat"
            android:layout_marginRight="20dp" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignTop="@id/image0"
            android:layout_toRightOf="@id/image0"
            android:src="@drawable/dog" />

    </RelativeLayout>

    <com.example.hokoblurdemo.view.DragBlurringView
        android:id="@+id/blurring"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="#33c9c4c9" />

</FrameLayout>
